<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="cn.invonate.ygoa3.login.WageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#F9F9F9"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pic_back"
            android:layout_width="120px"
            android:layout_height="120px"
            android:padding="30px"
            android:src="@mipmap/pic_back" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:text="工资福利"
            android:textColor="@color/black"
            android:textSize="50px" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E1E1E1" />

    <LinearLayout
        android:id="@+id/layout_wage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_mine_line"
        android:orientation="horizontal"
        android:padding="20px">

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginStart="20px"
            android:src="@mipmap/icon_wage" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40px"
            android:layout_weight="1"
            android:text="工资"
            android:textColor="#000000"
            android:textSize="50px" />

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="30px"
            android:src="@mipmap/file_next" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="160px"
        android:background="#E1E1E1" />

    <LinearLayout
        android:id="@+id/layout_gift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_mine_line"
        android:orientation="horizontal"
        android:padding="20px">

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginStart="20px"
            android:src="@mipmap/icon_gift" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40px"
            android:layout_weight="1"
            android:text="福利"
            android:textColor="#000000"
            android:textSize="50px" />

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="30px"
            android:src="@mipmap/file_next" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="160px"
        android:background="#E1E1E1" />

</LinearLayout>
