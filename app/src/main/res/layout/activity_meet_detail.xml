<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Meeting.MeetDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pic_back"
            android:layout_width="120px"
            android:layout_height="120px"
            android:padding="30px"
            android:src="@mipmap/pic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="会议详情"
            android:textColor="@color/black"
            android:textSize="50px" />

        <TextView
            android:id="@+id/txt_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="30px"
            android:gravity="center"
            android:text="变更"
            android:textColor="#000000"
            android:textSize="45px"
            android:visibility="invisible"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E1E1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="#000000"
                android:background="@null"
                android:enabled="false"
                android:textSize="50px" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingEnd="15px"
                android:paddingStart="15px"
                android:textColor="#000000"
                android:textSize="40px" />


        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:textColor="#A7A7A7"
            android:textSize="48px" />

        <TextView
            android:id="@+id/locate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:textColor="#A7A7A7"
            android:textSize="45px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px">

            <TextView
                android:id="@+id/person"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:textColor="#A7A7A7"
                android:textSize="48px" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10px"
                android:layout_marginTop="10px"
                android:background="#A7A7A7" />

            <TextView
                android:id="@+id/create"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:paddingStart="20px"
                android:textColor="#A7A7A7"
                android:textSize="48px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/meet_message" />

                <TextView
                    android:id="@+id/dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15px"
                    android:textColor="#A7A7A7"
                    android:textSize="45px" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="7"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/meet_single" />

                <TextView
                    android:id="@+id/sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15px"
                    android:textColor="#A7A7A7"
                    android:textSize="45px" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="30px"
        android:background="#E1E1E1" />

    <LinearLayout
        android:id="@+id/layout_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10px">

        <ImageView
            android:id="@+id/file_img"
            android:layout_width="160px"
            android:layout_height="160px" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20px"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="45px" />

            <TextView
                android:id="@+id/file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:textColor="#000000"
                android:textSize="45px" />

        </LinearLayout>

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:padding="25px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/file_next" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="30px"
        android:background="#E1E1E1" />

    <LinearLayout
        android:id="@+id/layout_in"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/back_mine_line"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="10px"
        android:paddingStart="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参会人："
            android:textColor="@color/black"
            android:textSize="40px" />

        <TextView
            android:id="@+id/person_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="40px" />

        <TextView
            android:id="@+id/in_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A7A7A7"
            android:textSize="40px" />

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:padding="25px"
            android:src="@mipmap/file_next" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="30px"
        android:background="#E1E1E1" />

    <LinearLayout
        android:id="@+id/layout_note"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginEnd="10px"
        android:layout_marginStart="30px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主持人："
            android:textColor="@color/black"
            android:textSize="40px" />

        <TextView
            android:id="@+id/person_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginEnd="30px"
            android:textColor="@color/black"
            android:textSize="40px" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="30px"
        android:background="#E1E1E1" />

    <LinearLayout
        android:id="@+id/layout_sign"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginEnd="10px"
        android:layout_marginStart="30px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="会议签到"
            android:textColor="@color/black"
            android:textSize="40px" />


        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:padding="25px"
            android:src="@mipmap/file_next" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:background="#edecf2" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_tab"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#FFFFFF">

    </android.support.design.widget.TabLayout>

    <cn.invonate.ygoa3.View.CustomViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </cn.invonate.ygoa3.View.CustomViewPager>

    <LinearLayout
        android:id="@+id/layout_attend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:background="#edecf2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E1E1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/attend_sure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认参加"
                android:textColor="@color/colorPrimary"
                android:textSize="50px" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E1E1E1" />

            <TextView
                android:id="@+id/attend_not"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="不参加"
                android:textColor="@color/colorPrimary"
                android:textSize="50px" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>