<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240px"
    android:orientation="horizontal"
    android:paddingBottom="40px"
    android:paddingStart="20px"
    android:paddingTop="40px">

    <CheckBox
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10px"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/mail_img"
        android:layout_width="160px"
        android:layout_height="160px"
        android:src="@mipmap/icon_get" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20px"
            android:layout_marginTop="10px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mail_sender"
                android:layout_width="480px"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="发件人：赵日阳"
                android:textColor="@color/black"
                android:textSize="45px" />

            <TextView
                android:id="@+id/mail_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:singleLine="true"
                android:text="2017-10-22 13:53"
                android:textColor="@color/fragemnt_text"
                android:textSize="40px" />

        </LinearLayout>

        <TextView
            android:id="@+id/mail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:singleLine="true"
            android:text="11111111111111111111111111"
            android:textColor="@color/fragemnt_text"
            android:textSize="45px" />

    </LinearLayout>

</LinearLayout>