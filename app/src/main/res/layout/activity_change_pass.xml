<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:orientation="vertical"
    tools:context="cn.invonate.ygoa3.login.ChangePassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#F9F9F9"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pic_back"
            android:layout_width="120px"
            android:layout_height="120px"
            android:padding="30px"
            android:src="@mipmap/pic_back" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingEnd="120px"
            android:singleLine="true"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="50px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E1E1E1" />

    <EditText
        android:id="@+id/pass_old"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginEnd="50px"
        android:layout_marginStart="50px"
        android:layout_marginTop="50px"
        android:background="#FFFFFF"
        android:hint="请输入原密码"
        android:inputType="textPassword"
        android:padding="10px"
        android:textColor="#000000"
        android:textSize="50px" />

    <EditText
        android:id="@+id/pass_new"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginEnd="50px"
        android:layout_marginStart="50px"
        android:layout_marginTop="20px"
        android:background="#FFFFFF"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:padding="10px"
        android:textColor="#000000"
        android:textSize="50px" />

    <EditText
        android:id="@+id/pass_sure"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginEnd="50px"
        android:layout_marginStart="50px"
        android:layout_marginTop="20px"
        android:background="#FFFFFF"
        android:hint="请再输一次新密码"
        android:inputType="textPassword"
        android:padding="10px"
        android:textColor="#000000"
        android:textSize="50px" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80px"
        android:background="@drawable/btn_login"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="50px" />

</LinearLayout>
