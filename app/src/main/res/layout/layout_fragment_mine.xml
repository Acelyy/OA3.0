<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_message"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="@color/black"
            android:textSize="55px" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <cn.invonate.ygoa3.View.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60px"
            android:scaleType="centerCrop"
            android:src="@mipmap/person_head" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:text="李阳洋"
            android:textColor="@color/white"
            android:textSize="50px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_group"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="50px"
        android:background="@drawable/back_mine_line"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50px"
            android:src="@mipmap/person_group" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="50px"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="群组管理"
            android:textSize="50px" />

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="30px"
            android:src="@mipmap/file_next" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BBBBBB"
        android:layout_marginStart="180px"/>

    <LinearLayout
        android:id="@+id/layout_money"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@drawable/back_mine_line"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50px"
            android:src="@mipmap/person_money" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="50px"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="名下资产"
            android:textSize="50px" />

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="30px"
            android:src="@mipmap/file_next" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BBBBBB"
        android:layout_marginStart="180px"/>

    <LinearLayout
        android:id="@+id/layout_day"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@drawable/back_mine_line"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50px"
            android:src="@mipmap/person_day" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="50px"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="日程管理"
            android:textSize="50px" />

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="30px"
            android:src="@mipmap/file_next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_gz"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="50px"
        android:background="@drawable/back_mine_line"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50px"
            android:src="@mipmap/person_gz" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="50px"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="工资福利"
            android:textSize="50px" />

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="30px"
            android:src="@mipmap/file_next" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BBBBBB"
        android:layout_marginStart="180px"/>

    <LinearLayout
        android:id="@+id/layout_wallet"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@drawable/back_mine_line"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50px"
            android:src="@mipmap/person_wallet" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="50px"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="电子钱包"
            android:textSize="50px" />

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="30px"
            android:src="@mipmap/file_next" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_setting"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="50px"
        android:background="@drawable/back_mine_line"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50px"
            android:src="@mipmap/person_setting" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="50px"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="系统设置"
            android:textSize="50px" />

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="30px"
            android:src="@mipmap/file_next" />

    </LinearLayout>



</LinearLayout>