<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="cn.invonate.ygoa3.Contacts.ContactsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#F9F9F9"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pic_back"
            android:layout_width="120px"
            android:layout_height="120px"
            android:padding="30px"
            android:src="@mipmap/pic_back" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingEnd="120px"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="50px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E1E1E1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/list_connect"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/dialog"
                android:layout_width="280px"
                android:layout_height="280px"
                android:layout_gravity="center"
                android:background="@drawable/back_toast"
                android:gravity="center"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="80px"
                android:visibility="gone" />

            <cn.invonate.ygoa3.Util.pingyin.SideBar
                android:id="@+id/sidebar"
                android:layout_width="60px"
                android:layout_height="match_parent"
                android:layout_gravity="center|right" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
