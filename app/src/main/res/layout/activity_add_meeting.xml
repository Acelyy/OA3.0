<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Meeting.AddMeetingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pic_back"
            android:layout_width="120px"
            android:layout_height="120px"
            android:padding="30px"
            android:src="@mipmap/pic_back" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="预约会议"
            android:textColor="@color/black"
            android:textSize="50px" />

        <TextView
            android:id="@+id/pic_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20px"
            android:gravity="center_vertical"
            android:src="@mipmap/mail_search"
            android:text="发送"
            android:textColor="@color/colorPrimary"
            android:textSize="50px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E1E1" />


    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@null"
        android:gravity="top|start"
        android:hint="请输入会议主题"
        android:padding="20px"
        android:textColor="#000000"
        android:textSize="50px" />


    <LinearLayout
        android:id="@+id/layout_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="30px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开始"
                android:textColor="#000000"
                android:textSize="50px" />

            <TextView
                android:id="@+id/start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018-06-01"
                android:textColor="#000000"
                android:textSize="45px" />

            <TextView
                android:id="@+id/start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9:00"
                android:textColor="#000000"
                android:textSize="50px" />

        </LinearLayout>

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/file_next" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="30px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="结束"
                android:textColor="#000000"
                android:textSize="50px" />

            <TextView
                android:id="@+id/end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018-06-01"
                android:textColor="#000000"
                android:textSize="45px" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:00"
                android:textColor="#000000"
                android:textSize="50px" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_address"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/back_mine_line"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="10px"
        android:paddingStart="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会议地点："
            android:textColor="@color/black"
            android:textSize="45px" />

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="请选择"
            android:textColor="#A7A7A7"
            android:textSize="45px" />

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:padding="25px"
            android:src="@mipmap/file_next" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:background="#f7f6f8" />

    <LinearLayout
        android:id="@+id/layout_in"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/back_mine_line"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="10px"
        android:paddingStart="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参会人："
            android:textColor="@color/black"
            android:textSize="45px" />

        <TextView
            android:id="@+id/person_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="请选择"
            android:textColor="#A7A7A7"
            android:textSize="45px" />

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:padding="25px"
            android:src="@mipmap/file_next" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="30px"
        android:background="#E1E1E1" />

    <LinearLayout
        android:id="@+id/layout_note"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginEnd="10px"
        android:layout_marginStart="30px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记录人："
            android:textColor="@color/black"
            android:textSize="45px" />

        <TextView
            android:id="@+id/person_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="请选择"
            android:textColor="#A7A7A7"
            android:textSize="45px" />

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:padding="25px"
            android:src="@mipmap/file_next" />

    </LinearLayout>


</LinearLayout>