<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200px"
    android:orientation="horizontal"
    android:id="@+id/layout_line">

    <RelativeLayout
        android:layout_width="250px"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2018-01-15"
                android:textColor="#999999"
                android:textSize="45px" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:gravity="center"
                android:text="15:21:36"
                android:textColor="#999999"
                android:textSize="45px" />

        </LinearLayout>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/line_top"
            android:layout_width="5px"
            android:layout_height="35px"
            android:layout_gravity="center_horizontal"
            android:background="#999999" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/circle_gray"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center"
                android:src="@mipmap/point_gray" />

            <ImageView
                android:id="@+id/circle_blue"
                android:layout_width="65px"
                android:layout_height="65px"
                android:src="@mipmap/point_blue"
                android:visibility="gone" />
        </FrameLayout>

        <View
            android:layout_width="5px"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#999999" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingStart="50px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="李阳洋"
                android:textColor="#999999"
                android:textSize="45px" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="11111111111111111111"
                android:textColor="#999999"
                android:textSize="45px" />

        </LinearLayout>



    </RelativeLayout>


</LinearLayout>