<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F0F0F0"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <cn.invonate.ygoa3.View.CircleImageView
            android:id="@+id/head"
            android:layout_width="120px"
            android:layout_height="120px"
            android:scaleType="centerCrop"
            android:src="@mipmap/person_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30px"
            android:layout_marginStart="20px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comments_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acelyy"
                android:textColor="@color/colorPrimary"
                android:textSize="42px" />

            <TextView
                android:id="@+id/comments_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="2017-5-3 14:21:47"
                android:textColor="@color/black"
                android:textSize="37px" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comments_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="111111111111111111"
            android:textColor="#333333"
            android:layout_marginTop="10px"
            android:textSize="42px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="15px"
        android:background="#F2F2F2" />

</LinearLayout>