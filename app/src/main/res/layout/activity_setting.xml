<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.invonate.ygoa3.login.SettingActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#F9F9F9"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pic_back"
            android:layout_width="120px"
            android:layout_height="120px"
            android:padding="30px"
            android:src="@mipmap/pic_back" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingEnd="120px"
            android:text="设置"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="50px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E1E1E1" />
    
    <LinearLayout
        android:id="@+id/layout_clean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/back_mine_line">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="45px"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text="清除缓存"
                android:layout_marginStart="30px"/>

            <ImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:src="@mipmap/file_next"
                android:padding="30px"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#E1E1E1"
            android:layout_marginStart="30px"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_change_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/back_mine_line">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="45px"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text="修改密码"
                android:layout_marginStart="30px"/>

            <ImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:src="@mipmap/file_next"
                android:padding="30px"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#E1E1E1"
            android:layout_marginStart="30px"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/back_mine_line">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"

                android:textSize="45px"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text="退出登录"
                android:layout_marginStart="30px"/>

            <ImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:src="@mipmap/file_next"
                android:padding="30px"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#E1E1E1"
            android:layout_marginStart="30px"/>


    </LinearLayout>



</LinearLayout>
