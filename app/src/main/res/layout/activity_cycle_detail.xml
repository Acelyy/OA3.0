<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Cycle.CycleDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#F9F9F9"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pic_back"
            android:layout_width="120px"
            android:layout_height="120px"
            android:padding="30px"
            android:src="@mipmap/pic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingEnd="120px"
            android:singleLine="true"
            android:text="详情"
            android:textColor="@color/black"
            android:textSize="50px" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <cn.invonate.ygoa3.View.CircleImageView
                        android:id="@+id/head"
                        android:layout_width="120px"
                        android:layout_height="120px"
                        android:layout_gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20px"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="李阳洋"
                            android:textColor="@color/black"
                            android:textSize="45px" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10px"
                            android:text="2018-3-13 13:01"
                            android:textColor="@color/black"
                            android:textSize="45px" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10px"
                    android:layout_marginTop="10px"
                    android:text="123456"
                    android:textColor="@color/black"
                    android:textSize="45px" />

                <LinearLayout
                    android:id="@+id/layout_imgs1"
                    android:layout_width="match_parent"
                    android:layout_height="230px"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/news_pic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/img_play"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:layout_gravity="center"
                            android:src="@mipmap/paly" />

                    </FrameLayout>


                    <ImageView
                        android:id="@+id/news_pic2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/news_pic3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_imgs2"
                    android:layout_width="match_parent"
                    android:layout_height="230px"
                    android:layout_marginBottom="20px"
                    android:layout_marginTop="20px"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/news_pic4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />


                    <ImageView
                        android:id="@+id/news_pic5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/news_pic6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_imgs3"
                    android:layout_width="match_parent"
                    android:layout_height="230px"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/news_pic7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/news_pic8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/news_pic9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_zan"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:padding="15px"
                            android:src="@mipmap/heat0" />

                        <TextView
                            android:id="@+id/sum_zan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:inputType="number"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="40px" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_content"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:padding="15px"
                            android:src="@mipmap/content" />

                        <TextView
                            android:id="@+id/sum_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:inputType="number"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="40px" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#E1E1E1" />

            <cn.invonate.ygoa3.View.LinearLayoutForListView
                android:id="@+id/list_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </cn.invonate.ygoa3.View.LinearLayoutForListView>

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text" />

        <TextView
            android:id="@+id/txt_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20px"
            android:gravity="center_vertical"
            android:text="发送"
            android:textColor="@color/colorPrimary"
            android:textSize="50px" />

    </LinearLayout>


</LinearLayout>