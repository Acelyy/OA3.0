<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_message"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="工作台"
            android:textColor="@color/black"
            android:textSize="55px" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:text="日常应用"
        android:textColor="@color/black"
        android:textSize="45px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_notice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_mine_line">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="100px"
                android:layout_marginTop="100px"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/work_notice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:text="公告"
                    android:textColor="@color/black"
                    android:textSize="40px" />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_allow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_mine_line">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="100px"
                android:layout_marginTop="100px"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/work_allow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:text="审批"
                    android:textColor="@color/black"
                    android:textSize="40px" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_mession"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_mine_line">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="100px"
                android:layout_marginTop="100px"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/work_mession" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:text="任务"
                    android:textColor="@color/black"
                    android:textSize="40px" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_mail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_mine_line">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="100px"
                android:layout_marginTop="100px"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/work_mail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:text="邮件"
                    android:textColor="@color/black"
                    android:textSize="40px" />


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_mine_line">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="100px"
                android:layout_marginTop="100px"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/work_report" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:text="工作汇报"
                    android:textColor="@color/black"
                    android:textSize="40px" />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_space"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_mine_line">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="100px"
                android:layout_marginTop="100px"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/work_space" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:text="永钢网盘"
                    android:textColor="@color/black"
                    android:textSize="40px" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:text="其他应用"
        android:textColor="@color/black"
        android:textSize="45px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_study"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_mine_line">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="100px"
                android:layout_marginTop="100px"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/work_study" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:text="在线学习"
                    android:textColor="@color/black"
                    android:textSize="40px" />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_meeting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_mine_line">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="100px"
                android:layout_marginTop="100px"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/work_metting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:text="会议"
                    android:textColor="@color/black"
                    android:textSize="40px" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>